<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<link rel="stylesheet" href="/css/star.css">
<br>
<div class="container space">
  <%- include("../partials/flash") %> 
    <div class="row">
        <div class="col-lg-6">
            <div class="card mt-5" style="width: 25rem;">
                <img src="<%=product.img%>"class="card-img-top showimg" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h5 class="card-title">&#8377; <%=product.price%></h5>
                  <p class="card-text"><%=product.desc%></p>
                  <a href="#" class="btn btn-primary">Buy</a>
                  <form action="/user/<%=product._id%>/cart" method="POST">
                    <button class="btn btn-secondary mt-2 mb-2">Add to Cart</button>
                  </form>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-warning">Edit</a>
                  <form display="inline" method="POST" action="/products/<%=product._id%>?_method=DELETE">
                    <button class="btn btn-danger mt-2">Delete</button>
                  </form>
                </div>
              </div>
        </div>
        <div class="col-lg-6 mt-3">
            <h2>Leave a comment</h2>
            <form  method="POST" action="/products/<%=product._id%>/review" class="needs-validation" novalidate>
              <!-- <div class="mb-3">
                <label for="rating" id="rating" class="form-label">Rating</label>
                <input type="range" class="form-range" name="rating" id="rating" min="0" max="5">
              </div> -->
              <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="rating" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
              <div class="mb-3">
                  <label for="comment" class="form-label">Comment</label>
                  <br>
                  <textarea  class="form-control" name="comment" id="comment" cols="25" rows="5" required></textarea>
              </div>
              <button type="submit" class="btn btn-success">Submit</button>
          </form>
          <div class="mt-3 ">
            <%for(let review of product.reviews){%>
              <div class="card mb-2">
                <div class="card-header text-capitalize">
                  <b><%= review.user %></b> 
                </div>
                <div class="card-body">
                  <h5 class="card-title"></h5>
                  <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated:<%=review.rating%> stars
                  </p>
                  <p class="card-text"><%=review.comment%></p>
                </div>
              </div>
            <%}%>
          </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %> 

