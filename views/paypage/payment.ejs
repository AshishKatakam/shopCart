<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 11rem;">

            <form class="validated-form" action="/payment_gateway/payumoney" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <h6 class="display-6">Add Your Payment Info</h6>
                <div class="form-group">
                  <input class="form-control" type="hidden" name="firstname" placeholder="First Name" value="<%= currentUser.firstname %>"/>
                </div>
                <div class="form-group">
                  <input class="form-control" type="hidden" name="udf1" placeholder="last Name" value="<%=currentUser.lastname%>"/>
                </div>
                <div class="form-group">
                  <input class="form-control" type="hidden" name="udf2" placeholder="Phone Number" value="<%=currentUser.contactnumber%>"/>
                </div>
              <div class="form-group">
                  <input class="form-control" type="hidden" name="email" value="" placeholder="E-mail" value="<%=currentUser.email%>"/>
              </div>
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Enter name as on the card" name="name" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="card" class="form-label">Card number</label>
                  <input type="number" class="form-control" id="card" placeholder="Enter your 12 digit card number" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="row">
                  <div class="mb-3 col-6">
                    <label for="date" class="form-label">Expiry Date</label>
                    <input type="month" class="form-control" id="card" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  <div class="mb-3 col-6">
                    <label for="date" class="form-label">CVV</label>
                    <input type="password" class="form-control" id="card" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div> 
                </div>
                <div class="form-group">
                  <input type="hidden" name="service_provider" value="payu_paisa"/>
                </div>
                <button type="submit" class="btn btn-success">Pay <%=currentUser.price%></button>
              </form>
        
   
</div>


<%- include("../partials/footer")%>